void clear_buffer() {
    int c;
    while ((c = getchar()) != '\n' && c != EOF);
}



void line(){

  printf("\n --------------------------------------\n");
}


void afficher_joueur(struct Equipe e) {
    if (e.statu != 1) {
        printf("\n|id:%d| Nom:%s | Maillot:%d | Poste:%s | Age:%d | Buts:%d\n",
               e.id, e.nom_et_prenom, e.numeroMaillot, e.poste, e.age, e.buts);
}
}
